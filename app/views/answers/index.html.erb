<div class="main main-raised" style="margin: 0 30px 0 30px">
  <div class="section" style="padding-top: 0px">
    <div class="container">
      <%= link_to 'Nueva respuesta', new_question_answer_path, class: 'btn btn-info' %>
      <% if notice %>
        <p class="alert alert-success" id="notice"><%= notice %></p>
      <% end %>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Respuesta</th>
            <th>Correcta?</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @answers.each do |answer| %>
            <tr>
              <td><%= answer.text %></td>
              <td><%= answer.correct? %>
              <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
              <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to 'Back', quiz_questions_path(@question.quiz) %>
    </div>
  </div>
</div>

