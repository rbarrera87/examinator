<div class='page-header header-filter'>
  <div class= 'container'>
    <div class= 'row'>
      <div class= 'col-lg-4 col-md-6 ml-auto mr-auto'>
        <div class='card card-login'>

          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), class: 'form') do |f| %>
            <div class='card-header card-header-primary text-center'>
              <h4 class='card-title'>Login</h4>
              <div class="social-line">
                <a href="javascript:;" class="btn btn-just-icon btn-link">
                  <i class="fa fa-facebook-square"></i>
                </a>
                <a href="javascript:;" class="btn btn-just-icon btn-link">
                  <i class="fa fa-twitter"></i>
                </a>
                <a href="javascript:;" class="btn btn-just-icon btn-link">
                  <i class="fa fa-google-plus"></i>
                </a>
              </div>
              <p class="description text-center">Or Be Classical</p>
            </div>
            <div class="card-body">
              <% if flash.alert.present? %>
                <% flash.each do |type, msg| %>
                  <div class="alert alert-danger">
                    <%= msg %>
                  </div>
                <% end %>
              <% end %>
              <span class="bmd-form-group">
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text">
                        <i class="material-icons">mail</i>
                      </span>
                    </div>
                    <%= f.input_field :email,
                                required: false,
                                autofocus: true,
                                autocomplete: "email",
                                class: 'form-control',
                                placeholder: 'Email'
                              %>
                  </div>
              </span>
              <span class="bmd-form-group">
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text">
                      <i class="material-icons">lock_outline</i>
                    </span>
                  </div>
                  <%= f.input_field :password,
                              required: false,
                              class: 'form-control',
                              autocomplete: "current-password"
                            %>
                </div>
              </span>
              <span class="bmd-form-group">
                <div class="input-group">
                  <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                </div>
              </span>
            </div>
            <div class="footer text-center">
              <%= f.button :submit, "Log in", class: 'btn btn-primary btn-link btn-wd btn-lg' %>
            </div>
          <% end %>

            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
