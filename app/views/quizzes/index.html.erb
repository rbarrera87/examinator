<div class="main main-raised" style="margin: 0 30px 0 30px">
  <div class="section" style="padding-top: 0px">
    <div class="container">
      <%= link_to 'New Quiz', new_quiz_path, class: 'btn btn-info' %>
      <% if notice %>
        <p class="alert alert-success" id="notice"><%= notice %></p>
      <% end %>
      <h1>Quizzes</h1>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Title</th>
            <th colspan="4"></th>
          </tr>
        </thead>

        <tbody>
          <% @quizzes.each do |quiz| %>
            <tr>
              <td><%= quiz.title %></td>
              <td><%= link_to 'Preguntas', quiz_questions_path(quiz) %></td>
              <td><%= link_to 'Show', quiz %></td>
              <td><%= link_to 'Edit', edit_quiz_path(quiz) %></td>
              <td><%= link_to 'Destroy', quiz, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
