<div class="main main-raised" style="margin: 0 30px 0 30px">
  <div class="section" style="padding-top: 0px">
    <div class="container">
      <div class="title">
        <div class="row">
          <div class="col-6 d-flex justify-content-end align-items-end">
            <%= link_to 'New Quiz', new_quiz_path, class: 'btn btn-info' %>
          </div>
        </div>
      </div>
        <p id="notice"><%= notice %></p>
        <h1>Quizzes</h1>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Title</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @quizzes.each do |quiz| %>
              <tr>
                <td><%= quiz.title %></td>
                <td><%= link_to 'Show', quiz %></td>
                <td><%= link_to 'Edit', edit_quiz_path(quiz) %></td>
                <td><%= link_to 'Destroy', quiz, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>
